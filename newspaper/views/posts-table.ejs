            <span class="icon text-white  ">
              <i class="fa fa-trash"></i>
            </span>
            <span class="text">Delete</span>
          </a>
          <a href="#" class="btn btn-success btn-icon-split mr-4">
            <span class="icon text-white  ">
              <i class="fa fa-upload"></i>
            </span>
            <span class="text">Publish</span>
          </a>
          <% if (userInfo[0].userClass > 2) { %>
          <a href="#" class="btn btn-warning btn-icon-split">
              <span class="icon text-white  ">
                  <i class="fa fa-check"></i>
              </span>
              <span class="text">Approve</span>
            </a>
            <% } %>
          <!-- DataTales Users -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Danh sách bài đăng</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th></th>
                      <th>Tiêu đề</th>
                      <th>Chuyên mục</th>
                      <th>Tag</th>
                      <th>Tác giả</th>
                      
                      <th>Ngày đăng</th>
                      <th onclick="sortTable(5)">Tình trạng</th>

                      <th>Thao tác </th>
                    </tr>
                  </thead>
                  <tbody>

                    <% posts.forEach(function(post) { %>
                    <tr>
                      <td>
                        <input type="checkbox">
                      </td>

                      <td><%= post.title %></td>
                      <td><%= post.category %> - <%= post.sub_category %></td>
                      <td>#?</td>
                      <td><%= userInfo[0].username %></td>
                      <td><%= post.publishDate %></td>

                      <% if (post.approval == 1) { %>
                        <td>Published</td>
                      <% } %>

                      <% if (post.approval == 2) { %>
                        <td>Publish pending...</td>
                      <% } %>

                      <% if (post.approval == 3) { %>
                        <td>Declined</td>
                      <% } %>
                      
                      <% if (post.approval == 4) { %>
                        <td>Approval pending...</td>
                      <% } %>

                      <% if (userInfo[0].userClass == 2) { %>
                      <td>
                        <button class="btn btn-primary">Chỉnh sửa</button>
                      </td>
                      <% } %>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

