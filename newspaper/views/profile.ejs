<!DOCTYPE html>
<html lang="en">

<head>




    <% include template/header-admin.ejs%>


</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%include template/sidebarAdmin.ejs%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">


                        <!-- Nav Item - Alerts -->


                        <!-- Nav Item - Messages -->


                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <% include template/user-infomation.ejs %>


                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Thông tin cá nhân</h1>

                </div>
                <!-- /.container-fluid -->
                <div class="row">
                    <div class="p-5 col-lg-5 d-flex align-items-center justify-content-center">

                        <img src="../../images/img_avatar2.png" class="img-fluid" width="380px" height="380px" alt="">
                    </div>
                    <div class="p-5 col-lg-6">

                        <form class="user">

                            <div class="form-group">
                                <label for="">Username:</label>

                                <input type="email" class="form-control form-control-user" id="username" value="<%= userInfo[0].username %>" disabled>
                            </div>
                            <div class="form-group">
                                <label for="">Full name</label>

                                <input type="email" class="form-control form-control-user" id="fullname" value="<%= userInfo[0].fullname %>" disabled>
                            </div>
                            <div class="form-group">
                                <label for="">Email</label>

                                <input type="email" class="form-control form-control-user" id="email" value="<%= userInfo[0].email %>" disabled>
                            </div>
                            <div class="form-group">
                                <label for="">Day of Birth</label>

                                <input type="email" class="form-control form-control-user" id="dob" value="<%= userInfo[0].dob %>" disabled>
                            </div>
                            <% if (userInfo[0].userClass == 2) { %>
                            <div class="form-group">
                                <label for="">Role</label>

                                <input type="email" class="form-control form-control-user" id="userclass" value="Writer" disabled>
                            </div>
                            <% } %>
                            <% if (userInfo[0].userClass == 3) { %>
                            <div class="form-group">
                                <label for="">Role</label>

                                <input type="email" class="form-control form-control-user" id="userclass" value="Editor" disabled>
                            </div>
                            <% } %>
                            <% if (userInfo[0].userClass == 4) { %>
                            <div class="form-group">
                                <label for="">Role</label>

                                <input type="email" class="form-control form-control-user" id="userclass" value="Admin" disabled>
                            </div>
                            <% } %>
                        </form>


                    </div>

                </div>

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <!-- <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2019</span>
                    </div>
                </div> -->
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <% include template/logout-modal.ejs %>

    <!-- Bootstrap core JavaScript-->
    <% include template/footer-admin.ejs%>

</body>

</html>
