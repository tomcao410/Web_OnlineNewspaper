<!DOCTYPE html>
<html lang="zxx" class="no-js">
	<head>
		<!-- Mobile Specific Meta -->
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<!-- Favicon-->
		<link rel="shortcut icon" href="img/fav.png">
		<!-- Author Meta -->
		<meta name="author" content="colorlib">
		<!-- Meta Description -->
		<meta name="description" content="">
		<!-- Meta Keyword -->
		<meta name="keywords" content="">
		<!-- meta character set -->
		<meta charset="UTF-8">
		<!-- Site Title -->
		<title>Magazine</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
		<!--CSS============================================= -->
		<%include template/css.ejs %>
	</head>
	<body>
		<%include template/header2.ejs %>
		<div class="site-main-container">
			<!-- Start top-post Area -->
			<section class="top-post-area pt-10">
				<div class="container no-padding">
					<div class="row small-gutters">
						<% ftTopMost.forEach(function(post){%>
						<div class="col-lg-8 top-post-left" style="height: 100%">
							<div class="feature-image-thumb relative">
								<div class="overlay overlay-bg"></div>
								<img class="img-fluid" src="<%=post.imgLink %>" alt="">
							</div>
							<div class="top-post-details">
								<ul class="tags">
									<li><a href="#"><%=post.categoryName %></a></li>
								</ul>
								<a href="/<%=post.categoryName %>/<%=post.subCategoryName %>/<%=post.title %>">
									<h3><%=post.title %></h3>
								</a>
								<ul class="meta">
										<li><a href="#"><i class="fa fa-pencil"></i> <%=post.fullname %></a></li>
										<li><a href="#"><i class="fa fa-calendar"></i> <%=post.publishDate %></a></li>
										<li><a href="#"><i class="fa fa-eye"></i> <%=post.views %></a></li>
								</ul>
							</div>
						</div>
						<% }) %>
						<div class="col-lg-4 top-post-right">
							<% ftPosts.forEach(function(post){%>
							
							<div class="single-top-post mt-10">
								<div class="feature-image-thumb relative">
									<div class="overlay overlay-bg"></div>
									<img class="img-fluid" src="<%=post.imgLink %>" alt="">
								</div>
								<div class="top-post-details">
									<ul class="tags">
										<li><a href="#"><%=post.categoryName %></a></li>
									</ul>
									<a href="/<%=post.categoryName %>/<%=post.subCategoryName %>/<%=post.title %>">
										<h4><%=post.title %></h4>
									</a>
									<ul class="meta">
											<li><a href="#"><i class="fa fa-pencil"></i> <%=post.fullname %></a></li>
											<li><a href="#"><i class="fa fa-calendar"></i> <%=post.publishDate %></a></li>
											<li><a href="#"><i class="fa fa-eye"></i> <%=post.views %></a></li>
									</ul>
								</div>
							</div>
							<% }) %>
						</div>
						<!-- <div class="col-lg-12">
							<div class="news-tracker-wrap">
								<h6><span>Breaking News:</span>   <a href="#">Astronomy Binoculars A Great Alternative</a></h6>
							</div>
						</div> -->
						
							
						
					</div>
				</div>
			</section>
			<!-- End top-post Area -->
			<!-- Start latest-post Area -->
			<section class="latest-post-area pb-120">
				<div class="container no-padding">
					<div class="row">
						<div class="col-lg-8 post-list">
							<!-- Start latest-post Area -->
							<div class="latest-post-wrap">
								<h4 class="cat-title">Tin mới nhất</h4>
								<% allPosts.forEach(function(post){%>
									<!-- if(post.page==1){%> -->
								<div class="single-latest-post row align-items-center">
									<div class="col-lg-5 post-left">
										<div class="feature-img relative">
											<div class="overlay overlay-bg"></div>
											<img class="img-fluid" src="<%=post.imgLink %>" alt="">
										</div>
										<ul class="tags">
											<li><a href="/<%=post.categoryName %>/<%=post.subCategoryName %>"><%=post.categoryName %> - <%=post.subCategoryName %></a></li>
										</ul>
									</div>
									<div class="col-lg-7 post-right">
										<a href="/<%=post.categoryName %>/<%=post.subCategoryName %>/<%=post.title %>">
											<h4><%=post.title %></h4>
										</a>
										<ul class="meta">
											<li><a href="#"><i class="fa fa-pencil"></i> <%=post.fullname %></a></li>
											<li><a href="#"><i class="fa fa-calendar"></i> <%=post.publishDate %></a></li>
											<li><a href="#"><i class="fa fa-eye"></i> <%=post.views %></a></li>
										</ul>
										<p>
											<%=post.postExcerpt %>
										</p>
									</div>
								</div>
								<% }) %>
								<nav aria-label="Page navigation example">
									<ul class="pagination justify-content-center">
									  
									  <li class="page-item"><a class="page-link" href="/page/1">1</a></li>
									  <li class="page-item"><a class="page-link" href="/page/2">2</a></li>
									  <li class="page-item"><a class="page-link" href="/page/3">3</a></li>
									  
									</ul>
								  </nav>
							</div>
							<!-- End latest-post Area -->
							
							<!-- Start banner-ads Area -->
							<div class="col-lg-12 ad-widget-wrap mt-30 mb-30">
								<img class="img-fluid" src="images/banner-ad.jpg" alt="">
							</div>
							<!-- End banner-ads Area -->
							<!-- Start popular-post Area -->
							<div class="popular-post-wrap">
								<h4 class="title">Bài viết mới nhất từ chuyên mục top 10</h4>
								<!--Top 10 mục - đứng đầu-->
								<% dataTopten.topten.forEach(function(post){
									if(post.id == 1){%>

								<div class="feature-post relative">									
									<div class="feature-img relative">
										<div class="overlay overlay-bg"></div>
										<img class="img-fluid" src="<%=post.img %>" alt="">
									</div>
									<div class="details">
										<ul class="tags">
											<li><a href="#"><%=post.tag %></a></li>
										</ul>
										<a href="/<%=post.category %>/<%=post.sub_category %>/<%=post.title %>">
											<h3><%=post.title %></h3>
										</a>
										<ul class="meta">
												<li><a href="#"><i class="fa fa-pencil"></i> <%=post.fullname %></a></li>
												<li><a href="#"><i class="fa fa-calendar"></i> <%=post.publishDate %></a></li>
												<li><a href="#"><i class="fa fa-eye"></i> <%=post.views %></a></li>
											
										</ul>
									</div>
								</div>
								<% }%>
								<% }) %>
								<!--Top 10 mục (1 dòng 2 cột)-->
								
								<div class="row mt-20 medium-gutters" style="overflow-y: scroll; height: 500px;">
									<% dataTopten.topten.forEach(function(post){%>								
									<!--Top 10 mục (1 dòng 2 cột)-->
									<div class="col-lg-6 single-popular-post">
										<div class="feature-img-wrap relative">
											<div class="feature-img relative">
												<div class="overlay overlay-bg"></div>
												<img class="img-fluid" src="<%=post.img %>" alt="">
											</div>
											<ul class="tags">
												<li><a href="#"><%=post.tag %></a></li>
											</ul>
										</div>
										<div class="details">
											<a href="/<%=post.category %>/<%=post.sub_category %>/<%=post.title %>">
												<h4><%=post.title %></h4>
											</a>
											<ul class="meta">
												<li><a href="#"><i class="fa fa-pencil"></i> <%=post.fullname %></a></li>
												<li><a href="#"><i class="fa fa-calendar"></i> <%=post.publishDate %></a></li>
												<li><a href="#"><i class="fa fa-eye"></i> <%=post.views %></a></li>
											</ul>
											<p class="excert">
													<%=post.description %>											
											</p>
										</div>
									</div>
									<% }) 	%>
								</div>
							</div>
							<!-- End popular-post Area -->
							<!-- Start relavent-story-post Area -->
							<!--Blank-->
							<!-- End relavent-story-post Area -->
						</div>
						<div class="col-lg-4">
							<div class="sidebars-area">
								<div class="single-sidebar-widget editors-pick-widget">
									<h6 class="title">Xem nhiều nhất</h6>
							</div>
							
							<div class="single-sidebar-widget editors-pick-widget" style="overflow-y: scroll; height: 800px;">
								
								<% datathoisu.tintuc.forEach(function(post){
									if(post.views > 100){%>
								<div class="editors-pick-post">
									<div class="feature-img-wrap relative">
										<div class="feature-img relative">
											<div class="overlay overlay-bg"></div>
											<img class="img-fluid" src="<%=post.img%>" alt="">
										</div>
										<ul class="tags">
											<li><a href="#"><%=post.sub_category%></a></li>
										</ul>
									</div>
									<div class="details">
										<a href="/<%=post.category %>/<%=post.sub_category %>/<%=post.title %>">
											<h4 class="mt-20"><%=post.title%></h4>
										</a>
										<ul class="meta">
											<li><a href="#"><i class="fa fa-pencil"></i> <%=post.fullname %></a></li>
											<li><a href="#"><i class="fa fa-calendar"></i> <%=post.publishDate %></a></li>
											<li><a href="#"><i class="fa fa-eye"></i> <%=post.views %></a></li>
										</ul>
										<p class="excert">
											<%=post.description %>
										</p>
									</div>
									
								</div>
								<% }%>
							<% }) %>
							</div>
							</div>
						</div>
					</div>
				</div>
			</section>
			<!-- End latest-post Area -->
		</div>
		
		<!-- start footer Area -->
		<%include template/footer.ejs%>
		<!-- End footer Area -->
		<%include template/js.ejs %>
	</body>
</html>