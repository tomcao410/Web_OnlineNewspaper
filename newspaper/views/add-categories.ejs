<!DOCTYPE html>
<html lang="en">

<head>

    <% include template/header-admin.ejs%>
    <% include template/css.ejs%>


</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%include template/sidebarAdmin.ejs%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <% include template/user-infomation.ejs %>
                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->

                <!-- Page Heading -->
                <form action="" style="display: inline-block">
                    <label>Thêm chuyên mục</label>
                    <input type="radio" name="catOnly" value="0" onchange="radioChange1()" id="radio_1" checked>
                    <label style="margin-left: 50px">Thêm chuyên mục con</label>
                    <input type="radio" name="subCatOnly" value="1" onchange="radioChange2()" id="radio_2">
                </form>
                <form method="POST" action="/add-categories">
                    
                    <div class="d-flex justify-content-between container-fluid">
                        <button style="width: 200px" type="submit">
                            <a class=" btn btn-warning  btn-icon-split" style="background: rgba(0, 0, 0, 0.4);">
                                <span class="icon text-white  ">
                                    <i class="fa fa-plus"></i>
                                </span>
                                <span class="text text-white">Thêm</span>
                            </a>
                        </button>
                    </div>
                    <div class=" form-group ml-5 w-50 mt-3" id="div1_1">
                        <label for="inputTitle">Chuyên mục: </label><br>
                        <input type="text" class="form-control font-weight-bold" name="categoryName" id="catNameInput" required
                            placeholder="*tên chuyên mục" style="width: 250px">
                    </div>
                    <div class=" form-group ml-5 w-50 mt-3" style="visibility: collapse" id="div2_1">
                            <label for="inputTitle">Các chuyên mục đã có: </label>
                            <select class="custom-select" id="inputGroupSelect01" name="selectBox" style="width: 140px">
                                <% topics.forEach(function(topic){ %>
                                <option value="<%=topic.id %>"> <%=topic.categoryName%>
                                </option>
                                <%})%>
                            </select>
                        </div>
                    <div class=" form-group ml-5 w-50 mt-3" style="visibility: collapse" id="div2_2">
                        <label for="inputTitle">Tên chuyên mục con cho chuyên mục: </label><br>
                        <input type="text" class="form-control font-weight-bold" name="subCategoryName" id="subCatNameInput"
                            placeholder="*tên chuyên mục con" style="width: 250px">
                    </div>
                    <%
                        var curTopicId = topics[topics.length - 1].id + 1;
                    %>
                    <input type="text" name="topicId" value="<%=curTopicId%>" style="visibility: collapse; display: none">
                    </div>
                </form>
            <!-- End of Main Content -->

            <!-- Footer -->
            <!-- <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">

                    </div>
                </div>
            </footer> -->
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <% include template/logout-modal.ejs %>
    <!-- Bootstrap core JavaScript-->
    <% include template/footer-admin.ejs%>
    <script src="../../javascripts/write-post.js"></script>
    <script type="text/javascript" src="../model/topic.json"></script>
    <% include template/js.ejs %>
</body>

</html>
